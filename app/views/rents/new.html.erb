<h3>Realize o cadastro abaixo para confimar o aluguel da bike</h3>

<%= form_for([@advertisement, @rent], url: checkout_advertisement_path(@advertisement)) do |f| %>
  <h4>Cliente</h4>
    <div class="form-group">
      <%= f.label :payment, 'Pagamento:' %>
      <%= f.text_field :payment, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :rent_date, 'Data do Aluguel:' %>
      <%= f.text_field :rent_date , class: 'form-control' %>
    </div>

  <%= f.submit 'Alugar Bike', class: 'btn btn-primary' %>
<% end %>
